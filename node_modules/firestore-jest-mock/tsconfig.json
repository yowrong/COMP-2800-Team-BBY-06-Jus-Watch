{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "lib": ["es2018"],
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./mocks/**/*", "./@types/**/*", "./*.ts"]
}
